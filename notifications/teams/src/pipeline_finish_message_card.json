{
    "@type": "MessageCard",
    "@context": "http://schema.org/extensions",
    "themeColor": "0076D7",
    "summary": "Kubeflow Pipeline succeeded",
    "sections": [
        {
            "activityTitle": "Kubeflow Pipeline succeeded",
            "activitySubtitle": "Pipeline Run $kfp_run_id",
            "activityImage": "https://thumbs.dreamstime.com/b/silhouette-man-succeeded-climbing-against-snowy-mountains-74151498.jpg",
            "facts": [
                {
                    "name": "Workflow",
                    "value": "$object_name"
                }
            ],
            "markdown": true
        }
    ],
    "potentialAction": [
        {
            "@type": "OpenUri",
            "name": "View Pipeline Run",
            "targets": [
                {
                    "os": "default",
                    "uri": "$kfp_run_uri"
                }
            ]
        }
    ]
}